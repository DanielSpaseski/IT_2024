@model IEnumerable<MVC_Libraries_Modified.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="booksTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="/Authors/Details/@item.Author.Id">@item.Author.Name</a>
                </td>
                <td>
                    @Html.ActionLink(item.Title, "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookCode)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    <button type="submit" data-id="@item.Id" class="btn-primary js-delete">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#booksTable").DataTable();
            $("#booksTable .js-delete").click(function () {
                var btn = $(this);
                bootbox.confirm("Do you want to delete this book?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/BooksApi/" + btn.attr("data-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(btn.parents("tr")).remove().draw();
                            }
                        })
                    }
                })
            })
        })
    </script>
}