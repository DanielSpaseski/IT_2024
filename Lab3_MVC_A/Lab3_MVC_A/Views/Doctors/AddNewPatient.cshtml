@model Lab3_MVC_A.Models.DoctorPatient
@{
    ViewBag.Title = "AddNewPatient";
}

<h2>Add New Patient</h2>
@using (Html.BeginForm("AddNewPatient", "Doctors"))
            {
                <div>
                    @Html.DropDownListFor(model => model.PatientId, new SelectList(Model.Patients,"Id","NameSurname"))
                    @Html.HiddenFor(model => model.DoctorId)
                </div>
                <div>
                    <button type="submit" class="btn btn-default">Add new patient</button>
                </div>
            }
