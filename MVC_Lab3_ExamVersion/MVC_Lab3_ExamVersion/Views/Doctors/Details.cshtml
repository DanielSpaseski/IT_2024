@model MVC_Lab3_ExamVersion.Models.Doctor

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<h4>List of patients:</h4>
<ul>
    @foreach(var patient in Model.Patients)
            {
                <li>
                    <a href="/Patients/Details/@patient.Id">@patient.Name</a>
                    @Html.ActionLink("Delete Patient", "DeletePatient", new {doctorId = Model.Id, patientId = patient.Id})
                </li>
            }
</ul>
<p>
    @if(User.IsInRole("Admin") || User.IsInRole("Editor")) 
    { 
    @Html.ActionLink("Add New Patient", "AddNewPatient", new {id = Model.Id}) <span>|</span>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) <span>|</span>
    }
    @Html.ActionLink("Back to List", "Index")
</p>
